generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model Task {
  id        String   @id
  userId    String
  label     String
  done      Boolean
  createdAt DateTime
}

model Room {
  roomId      String       @id
  board       Json
  status      String
  createdAt   DateTime
  currentTurn Int
  winner      Int?
  userOnRooms UserOnRoom[]
}

model UserOnRoom {
  firebaseId String
  in         DateTime
  out        DateTime?
  Room       Room      @relation(fields: [roomId], references: [roomId])
  roomId     String

  @@id([firebaseId, roomId])
}
